

<main class="container" id="indexcontainer">
  <h2 class="showhead">Monsters</h2>
  <ul class="row">
    <% dragons.forEach((dragon) => { %>
      <li class="col-md-6 col-lg-4">
      <div class="indexdragon">
      <img class="picturesmall" src="<%= dragon.image %>" alt="Waiting for image">
      <h3 class="indexname"><a href="/dragons/<%= dragon.id %>"><%= dragon.name %></a></h3>
      <p>DESCRIPTION: <%= dragon.description %></p>
      </div>
      </li>
    <% }); %>
  </ul>
</main>
